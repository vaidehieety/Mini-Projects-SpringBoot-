
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!--    1. Create a StudentAttendee bean with id "student" and prototype scope.-->
<!--    2. Create a GraduationCeremonyEvent bean with id "event" and inject the student bean in it using setter injection.-->
<bean id="student" class="com.example.EventRegistration.StudentAttendee" scope="prototype" init-method="init"></bean>
<bean id="event" class="com.example.EventRegistration.GraduationCeremonyEvent" init-method="init" destroy-method="destroy">
<property name="attendee" ref="student"></property></bean>
<bean id="college" class="com.example.EventRegistration.MyCollege" init-method="init" destroy-method="destroy"><property name="event" ref="event"></property></bean>

</beans>